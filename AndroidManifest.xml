<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baba.openmygate"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />
    
  	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.CALL_PHONE"/>
	<uses-permission android:name="android.permission.BLUETOOTH"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="OpenMyGate"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".OpenMyGate"
            android:label="OpenMyGate" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service android:name="com.baba.openmygate.IsBluetoothHeadsetConnectedService"/>
        <service android:name="com.baba.openmygate.TrackMeService"/>
        
    </application>

</manifest>